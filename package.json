{
  "name": "piction-web",
  "private": true,
  "dependencies": {
    "@reach/router": "^1.2.1",
    "axios": "^0.19.0",
    "body-scroll-lock": "^2.6.3",
    "normalize.css": "^8.0.1",
    "prop-types": "^15.7.2",
    "react": "^16.8.6",
    "react-cookie": "^4.0.0",
    "react-dom": "^16.8.6",
    "react-helmet": "^5.2.1",
    "react-quill": "^1.3.3",
    "styled-components": "^4.2.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "docz": "docz dev",
    "docz:build": "docz build",
    "svgo": "svgo --config=.svgo.yml --indent=2 src/images/*.svg",
    "lint": "eslint --ext jsx --ext js src"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.svg": [
      "svgo --config=.svgo.yml --indent=2",
      "git add"
    ],
    "*.{js,jsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "airbnb"
    ],
    "plugins": [
      "react-hooks"
    ],
    "rules": {
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": true
        }
      ],
      "react/forbid-prop-types": "off",
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "warn"
    },
    "settings": {
      "import/resolver": {
        "node": {
          "moduleDirectory": [
            "node_modules",
            "src/"
          ]
        }
      }
    }
  },
  "browserslist": [
    "> 1%",
    "ie 11",
    "not dead"
  ],
  "devDependencies": {
    "@babel/core": "^7.4.3",
    "docz": "^1.2.0",
    "docz-theme-default": "^1.2.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-react-hooks": "^1.6.0",
    "husky": "^2.3.0",
    "lint-staged": "^8.1.7",
    "react-hot-loader": "^4.8.4",
    "react-scripts": "^3.0.1",
    "svgo": "^1.2.2"
  },
  "resolutions": {
    "docz/**/webpack": "4.28.4"
  }
}
